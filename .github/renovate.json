{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":separateMajorReleases",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases"
  ],
  "ignoreTests": false,
  "packageRules": [
    {
      "description": "Disable updates for docker, github actions, gitlab ci, and go mod files.",
      "matchManagers": ["dockerfile", "github-actions", "gitlabci", "gomod"],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "repology",
      "depNameTemplate": "freebsd/tor",
      "fileMatch": [
        "^network/tor/tor\\.SlackBuild$",
        "^network/tor/tor\\.info$"
      ],
      "matchStrings": [
        "VERSION=\\${VERSION:-(?<currentValue>.*?)}",
        "VERSION=\"(?<currentValue>.*?)\"",
        "torproject.org/tor-(?<currentValue>.*?)\\.tar\\.gz"
      ],
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "NordSecurity/nordvpn-linux",
      "fileMatch": [
        "^network/nordvpn/nordvpn\\.SlackBuild$",
        "^network/nordvpn/nordvpn\\.info$"
      ],
      "matchStrings": [
        "VERSION=\\${VERSION:-(?<currentValue>.*?)}",
        "VERSION=\"(?<currentValue>.*?)\"",
        "pool/main/nordvpn_(?<currentValue>.*?)_"
      ]
    }
  ]
}
